{
  "manifest_version": 3,
  "name": "NoCap",
  "version": "1.0",
  "description": "Warn users about fake gift/reward websites to prevent cyber attacks.",
  "permissions": [
    "tabs",
    "webRequest",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}