{
  "manifest_version": 3,
  "name": "NoCap",
  "version": "1.0",
  "description": "Warns about unsafe websites and detects phishing links.",
  "permissions": [
    "tabs",
    "webRequest",

    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
